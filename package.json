{
  "name": "stand-ups-visualisation-backend",
  "version": "1.0.0",
  "description": "A simple Express, PostgresSQL and Sequelize Web API and Database for the storage and serving of data from SOON_'s once daily morning stand-ups.",
  "directories": {
    "test": "test"
  },
  "main": "index.js",
  "private": true,
  "scripts": {
    "data:parse:test": "MODE=test node ./data/parse/index",
    "data:parse:dev": "MODE=dev node ./data/parse/index",
    "data:parse:prod": "MODE=prod node ./data/parse/index",
    "db:clear:test": "MODE=test node ./db/clear",
    "db:clear:dev": "MODE=dev node ./db/clear",
    "db:clear:prod": "MODE=prod node ./db/clear",
    "db:migrate:test": "sequelize db:migrate --env test",
    "db:migrate:dev": "sequelize db:migrate --env dev",
    "db:migrate:prod": "sequelize db:migrate --env prod",
    "db:seed:test": "MODE=test node ./db/seed/index",
    "db:seed:dev": "MODE=dev node ./db/seed/index",
    "db:seed:prod": "MODE=prod node ./db/seed/index",
    "db:init:test": "npm run db:clear:test && npm run db:migrate:test && npm run db:seed:test",
    "db:init:dev": "npm run db:clear:dev && npm run db:migrate:dev && npm run db:seed:dev",
    "db:init:prod": "npm run db:clear:prod && npm run db:migrate:prod && npm run db:seed:prod",
    "start:test": "MODE=test nodemon ./bin/www",
    "start:dev": "MODE=dev nodemon ./bin/www",
    "start:prod": "MODE=prod nodemon ./bin/www",
    "test": "npm run data:parse:test && npm run db:init:test && dredd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thisissoon/stand-ups-visualisation-backend.git"
  },
  "author": "SOON_",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thisissoon/stand-ups-visualisation-backend/issues"
  },
  "homepage": "https://github.com/thisissoon/stand-ups-visualisation-backend#readme",
  "dependencies": {
    "body-parser": "~1.17.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "express": "~4.15.2",
    "hal": "^1.1.0",
    "logger": "git://github.com/jackhkmatthews/node-logger#v1.0.0",
    "morgan": "~1.8.1",
    "pg": "^6.4.2",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.3.2",
    "sequelize-cli": "^2.7.0",
    "standup-parser": "git://github.com/jackhkmatthews/node-standups#v3.0.1"
  },
  "devDependencies": {
    "rimraf": "^2.6.1"
  }
}
